{
    "name": "diablomedia/zendframework1-validate",
    "description": "Zend Framework 1 Validate component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
        "diablomedia/zendframework1-exception": "dev-php-85 as 1.1.1",
        "diablomedia/zendframework1-config": "dev-php-85 as 2.0.5",
        "diablomedia/zendframework1-loader": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-registry": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-date": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-filter": "dev-php-85 as 1.0.6",
        "diablomedia/zendframework1-locale": "dev-php-85 as 1.0.6",
        "diablomedia/zendframework1-translate": "dev-php-85 as 1.0.5"
    },
    "autoload": {
        "psr-0": {
            "Zend_Validate_": "src/"
        },
        "classmap": [
            "src/Zend/Validate.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.19 || ^10.5.18",
        "phpstan/phpstan": "2.1.1",
        "friendsofphp/php-cs-fixer": "3.67.0",
        "maglnet/composer-require-checker": "^3.0.0",
        "phpro/grumphp-shim": "^2.0.0"
    },
    "include-path": [
        "src/"
    ],
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi --memory-limit=768M",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "suggest": {
        "ext-iconv": "Used in Hostname and StringLength validators",
        "ext-ctype": "Used in the CreditCard and Hex validators",
        "ext-intl": "Optionally used in the EmailAddress validator",
        "diablomedia/zendframework1-validate-db": "To use Zend_Db validations (RecordExists/NoRecordExists)",
        "diablomedia/zendframework1-validate-ldap": "To use Zend_Ldap validations",
        "diablomedia/zendframework1-validate-file": "To use Zend_File validations",
        "diablomedia/zendframework1-validate-sitemap": "To use Zend_Sitemap validations"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    },
    "minimum-stability": "dev"
}
