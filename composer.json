{
    "name": "diablomedia/zendframework1-validate",
    "description": "Zend Framework 1 Validate component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "diablomedia/zendframework1-exception": "^1.0.1",
        "diablomedia/zendframework1-config": "^1.0.0",
        "diablomedia/zendframework1-loader": "^1.0.0",
        "diablomedia/zendframework1-registry": "^1.0.0",
        "diablomedia/zendframework1-date": "*",
        "diablomedia/zendframework1-file": "*",
        "diablomedia/zendframework1-filter": "*",
        "diablomedia/zendframework1-ldap": "*",
        "diablomedia/zendframework1-locale": "*",
        "diablomedia/zendframework1-translate": "*",
        "diablomedia/zendframework1-uri": "*"
    },
    "autoload": {
        "psr-0": {
            "Zend_": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "no-api": true,
            "url": "https://github.com/diablomedia/phpstorm-stubs"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9.2",
        "jetbrains/phpstorm-stubs": "dev-phpstan"
    },
    "include-path": [
        "src/"
    ],
    "archive": {
        "exclude": ["/tests"]
    },
    "scripts": {
        "test": "phpunit ./tests",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml ./tests",
        "phpstan": "phpstan analyze -l4 -c phpstan.neon --no-progress ./src --ansi"
    },
    "suggests": {
        "ext-iconv": "Used in Hostname and StringLength validators",
        "ext-hash": "Used in the File_Hash vaidator",
        "ext-fileinfo": "Optionally used in the File_MimeType validator",
        "ext-ctype": "Used in the CreditCard and Hex validators",
        "ext-intl": "Optionally used in the EmailAddress validator",
        "diablomedia/zendframework1-validate-db": "To use Zend_Db validations (RecordExists/NoRecordExists)"
    }
}
